    <None Remove="ClientApp\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\VoltSignature.PostgreSQL\VoltSignature.PostgreSQL.csproj" />
  </ItemGroup>

 

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">


 
  </Target>

